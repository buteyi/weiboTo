<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeiBoHoloNoWindowTranslucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="WeiBoHoloWindowTranslucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="tv_m_blue_sl">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#576b95</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_m_grey_sl">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_m_black_sl">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cw_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_grey_hint_black_txt_bg_white">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cw_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/cw_grey</item>
        <item name="android:background">@color/cw_white</item>
    </style>

</resources>